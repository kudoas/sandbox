{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ERB",
  "patterns": [
    {
      "include": "#javascript_tag_block"
    },
    {
      "include": "text.html.basic"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "javascript_tag_block": {
      "name": "meta.embedded.block.html",
      "begin": "<%[-=]?\\s*javascript_tag\\b[^%]*\\bdo\\b[^%]*-?%>",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.tag.erb"
        }
      },
      "end": "<%\\s*end\\s*-?%>",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.tag.erb"
        }
      },
      "contentName": "source.js",
      "patterns": [
        {
          "include": "source.js"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.erb",
          "match": "\\b(if|while|for|return)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.erb",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.erb",
          "match": "\\\\."
        }
      ]
    }
  },
  "scopeName": "text.html.erb"
}
